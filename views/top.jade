extends layout

block style
  link(rel='stylesheet', href='/styles/top.css')

block content
  #intro-area
    h3 Please your photo.
    i.material-icons insert_photo
  #picture-area.none
    .picture-background
      img#picture(width='80%')
    .spinner
      .mdl-spinner.mdl-js-spinner.is-active
    button#upload-btn.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent 送信
    button#cancel-btn.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect キャンセル

  #thanks-area.none
    h3 Thank you so much.
    i.material-icons favorite

  #camera-area
    button#camera-btn.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--colored
      i.material-icons photo_camera
      input#image-file(type='file', accept='image/*')

block script
  script(type='text/javascript', src='/components/exif/exif.js')
  script(type='text/javascript', src='/scripts/top.js')
